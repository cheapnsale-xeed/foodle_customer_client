<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cart_cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp"
        android:background="@color/colorWhite"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <ImageButton
                android:id="@+id/cart_item_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ico_delete" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cart_item_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/img_food_3" />

                <TextView
                    android:id="@+id/cart_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cart_item_img"
                    android:layout_marginStart="26.2dp"
                    android:layout_marginTop="28dp"
                    android:text="놀부 왕족발 세트"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />
                <!--android:layout_alignTop="@+id/cart_item_img"-->


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/cart_item_img"
                    android:layout_below="@+id/cart_item_name"
                    android:layout_marginStart="17.8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="18dp"
                    >
                    <!--android:layout_marginBottom="11dp"-->
                    <!--android:layout_alignParentBottom="true"-->

                    <ImageButton
                        android:id="@+id/cart_item_minus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ico_minus_dim" />

                    <TextView
                        android:id="@+id/cart_item_count_text"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/cart_item_minus"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <ImageButton
                        android:id="@+id/cart_item_plus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/cart_item_count_text"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ico_plus" />

                    <TextView
                        android:id="@+id/cart_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPointRed"
                        android:textSize="15dp"
                        android:text="22,000원" />
                    <!--android:layout_alignParentRight="true"-->

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>