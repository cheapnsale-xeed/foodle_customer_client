<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selected_menu_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8c8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/item_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#f8f8f8"
            android:padding="0dp"
            android:src="@drawable/ico_minus" />

        <TextView
            android:id="@+id/item_count_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/item_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#f8f8f8"
            android:padding="0dp"
            android:src="@drawable/ico_plus" />

        <TextView
            android:id="@+id/selected_item_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11.5dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#bb0551"
            android:textSize="15dp"
            tools:text="22,000ì›" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_order_and_add_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="21dp">

        <Button
            android:id="@+id/menu_item_add_cart"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/wish_list_button_shape"
            android:text="@string/put_in"
            android:textColor="#151515"
            android:textSize="15dp" />

        <Button
            android:id="@+id/menu_item_order_now"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/direct_order_button_shape"
            android:text="@string/direct_order"
            android:textColor="#111cc4"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>