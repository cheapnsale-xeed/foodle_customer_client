<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="106dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/map_store_list_cardview"
        android:layout_width="325dp"
        android:layout_height="106dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        card_view:cardCornerRadius="5dp"
        android:background="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/map_store_img_layout"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/map_store_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_food_3" />

                <ImageView
                    android:id="@+id/map_store_img_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_food_3" />

                <TextView
                    android:id="@+id/map_store_avg_prep_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20분"
                    android:layout_marginBottom="11.5dp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/map_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/map_store_img_layout"
                android:layout_marginStart="26.2dp"
                android:layout_marginTop="28dp"
                android:text="놀부 왕족발 세트"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/map_store_img_layout"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="26.2dp"
                android:layout_marginBottom="17.5dp"
                >

                <TextView
                    android:id="@+id/text_arrival_time_in_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#99000000"
                    tools:text="도보 5분"/>

                <View
                    android:id="@+id/view_divide_bar_in_map"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:background="#c7c7c7" />

                <TextView
                    android:id="@+id/text_distance_to_store_in_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#99000000"
                    tools:text="100m"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>