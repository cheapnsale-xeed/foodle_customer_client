<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="50dp"
    android:layout_marginTop="25dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            tools:text="미소야" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_arrival_time_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3000000"
                android:textSize="15dp"
                tools:text="도보 3분" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="6.5dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorGrayBar" />

            <TextView
                android:id="@+id/text_distance_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#B3000000"
                android:textSize="15dp"
                tools:text="150m" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="6.5dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorGrayBar" />

            <TextView
                android:id="@+id/text_recommend_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3000000"
                tools:text="추천 460" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_src_store"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="11dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:layout_width="94dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/text_prep_time_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="4.5dp"
            android:hint="30분 걸려요"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />
    </RelativeLayout>

</LinearLayout>