<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="231.5dp"
    android:layout_centerHorizontal="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/store_image_view"
            android:layout_width="330dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5.5dp"
            android:src="@drawable/img_store" />

        <TextView
            android:id="@+id/store_prepTime_view"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/store_image_view"
            android:layout_alignRight="@+id/store_image_view"
            android:background="#4d58f2"
            android:gravity="center_vertical"
            android:text="즉시픽업!"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/store_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/store_image_view"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="177.5dp"
            android:gravity="center_vertical"
            android:text="미소야"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/store_distance_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/store_image_view"
            android:layout_alignTop="@id/store_name_view"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:text="0.4km"
            android:textAlignment="center"
            android:textColor="#323232"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@id/store_distance_view"
            android:layout_alignStart="@id/store_distance_view"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="-6.5dp"
            android:background="#c7c7c7" />

    </RelativeLayout>
</LinearLayout>