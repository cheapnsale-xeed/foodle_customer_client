<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_cart"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/image_delete_button_cart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ico_delete" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_item_src_cart"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/img_food_3" />

                <TextView
                    android:id="@+id/text_item_name_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26.2dp"
                    android:layout_marginTop="28dp"
                    android:layout_toRightOf="@+id/image_item_src_cart"
                    android:text="놀부 왕족발 세트"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_item_name_cart"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="17.8dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/image_item_src_cart">

                    <ImageView
                        android:id="@+id/image_minus_button_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ico_minus_dim" />

                    <TextView
                        android:id="@+id/text_item_count_cart"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image_minus_button_cart"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/image_plus_button_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/text_item_count_cart"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ico_plus" />

                    <TextView
                        android:id="@+id/text_item_price_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="22,000원"
                        android:textColor="@color/colorPointRed"
                        android:textSize="15dp" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>