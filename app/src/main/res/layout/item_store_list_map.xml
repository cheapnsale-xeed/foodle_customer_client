<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="325dp"
    android:layout_height="106dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="106dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative_store_image_map"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/image_store_src_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_food_3" />

                <ImageView
                    android:id="@+id/image_store_cover_src_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_food_3" />

                <TextView
                    android:id="@+id/text_avg_prep_time_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="11.5dp"
                    android:text="20분"
                    android:textColor="@color/colorWhite" />

            </RelativeLayout>


            <TextView
                android:id="@+id/text_store_name_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26.2dp"
                android:layout_marginTop="28dp"
                android:layout_toEndOf="@+id/relative_store_image_map"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                tools:text="놀부 왕족발 세트" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17.5dp"
                android:layout_marginStart="26.2dp"
                android:layout_toEndOf="@+id/relative_store_image_map"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_arrival_time_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayMapStore"
                    tools:text="도보 5분" />

                <View
                    android:id="@+id/view_vertical_bar_map"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorGrayBar" />

                <TextView
                    android:id="@+id/text_distance_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayMapStore"
                    tools:text="100m" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>