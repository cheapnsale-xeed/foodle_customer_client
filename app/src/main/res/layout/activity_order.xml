<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.xeed.cheapnsale.OrderActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mainToolBar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <ImageButton
                    android:id="@+id/main_toolbar_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/white"
                    android:contentDescription="@string/search_contentDescription"
                    android:src="@drawable/ico_back" />

                <TextView
                    android:id="@+id/mainToolBarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"
                    android:text="@string/order"
                    android:textColor="@android:color/black"
                    android:textSize="17dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d3d3d3" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/pickup_time"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/expect_cooking_time"
                android:textColor="@color/colorBlack"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/order_pick_up_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                tools:hint="10분" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/order_time_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical"
                android:paddingTop="-2dp">

                <RadioButton
                    android:id="@+id/order_time_now_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/order_now"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/order_time_today_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/expect_today_order"
                    android:textSize="16dp" />

            </RadioGroup>

            <RelativeLayout
                android:id="@+id/today_order_layout"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="7dp">

                <View
                    android:id="@+id/order_bar"
                    android:layout_width="1dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:background="#c7c7c7" />

                <TextView
                    android:id="@+id/time_to_pickup_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="7dp"
                    android:layout_toEndOf="@id/order_bar"
                    android:text="5"
                    android:textSize="16.5dp"
                    tools:hint="5" />

                <TextView
                    android:id="@+id/time_to_pickup_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="1dp"
                    android:layout_toEndOf="@id/time_to_pickup_value"
                    android:text="@string/pickup_after_time"
                    android:textSize="16.5dp"
                    tools:hint="분 후 픽업!" />

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="66dp"
                    android:layout_height="25.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="17dp"
                    android:background="@drawable/direct_order_button_shape"
                    android:text="@string/pick_time_reset"
                    android:textColor="#111cc4"
                    android:textSize="13dp" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#99d8d8d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17.2dp"
            android:layout_marginTop="17dp"
            android:text="@string/payment_type"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/order_payment_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19.2dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/order_payment_credit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/payment_credit"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/order_payment_kakaopay"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="@string/payment_kakaopay"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/order_payment_mobile_phone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/payment_mobile_phone"
                android:textSize="16dp" />

        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#99d8d8d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="17dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/order_user_info"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_user_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:text="@string/order_user_info_change"
                android:textColor="#111cc4"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="17dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/order_user_info_name"
                android:layout_width="114dp"
                android:layout_height="42dp"
                android:background="@drawable/order_edittext_shape"
                android:paddingStart="10dp"
                android:text="이서진"/>

            <EditText
                android:id="@+id/order_user_info_tel"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="11.5dp"
                android:background="@drawable/order_edittext_shape"
                android:paddingStart="10dp"
                android:text="01012345678"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#99d8d8d8" />

</LinearLayout>
