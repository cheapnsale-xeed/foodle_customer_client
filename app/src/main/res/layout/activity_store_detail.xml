<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_store_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xeed.cheapnsale.activity.StoreDetailActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_store_detail"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_store_detail"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:fitsSystemWindows="true">


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_store_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/image_top_src_store_detail"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_store_1"
                    app:layout_collapseMode="parallax" />

                <FrameLayout
                    android:id="@+id/frame_store_detail"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:fitsSystemWindows="true">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floating_call_button_store_detail"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom|end"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="true"
                        android:elevation="0dp"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ico_call"

                        />
                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        app:layout_collapseMode="parallax">

                        <TextView
                            android:id="@+id/text_name_store_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:textColor="@android:color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            tools:text="놀부족발" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:layout_marginStart="17dp"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        app:layout_collapseMode="parallax">

                        <TextView
                            android:id="@+id/text_arrival_time_store_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#b3000000"
                            android:textSize="14dp"
                            tools:text="도보 3분" />

                        <View
                            android:id="@+id/view_vertical_bar_store_detail"
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginEnd="6.5dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="2dp"
                            android:background="#ccb9b9b9" />

                        <TextView
                            android:id="@+id/text_distance_store_detail"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:textColor="#b3000000"
                            android:textSize="14dp"
                            tools:text="0.4km" />

                        <TextView
                            android:id="@+id/text_payment_type_store_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="17dp"
                            android:textColor="@android:color/black"
                            android:textSize="14dp"
                            tools:text="바로결제" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="19dp"
                        android:background="#eeeeee" />


                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_store_detail"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="bottom"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                        app:layout_collapseMode="parallax"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="#333333"
                        app:tabIndicatorHeight="1dp"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@android:color/black"
                        app:tabTextAppearance="@style/StoreDetailTabTextAppearance" />
                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_store_detail"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image_back_button_store_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:background="#ccffffff"
                            android:contentDescription="@string/search_contentDescription"
                            android:src="@drawable/ico_back"
                            app:layout_collapseMode="pin" />

                        <TextView
                            android:id="@+id/text_title_order_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="7dp"
                            android:layout_toEndOf="@+id/image_back_button_store_detail"
                            android:text="@string/order"
                            android:textColor="#CC000000"
                            android:textSize="17dp"
                            android:visibility="gone"
                            app:layout_collapseMode="pin" />

                        <TextView
                            android:id="@+id/text_call_button_store_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="22dp"
                            android:text="@string/phone"
                            android:textColor="#111cc4"
                            android:textSize="14dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/text_map_button_store_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20.5dp"
                            android:layout_toStartOf="@+id/text_call_button_store_detail"
                            android:text="@string/map"
                            android:textColor="#111cc4"
                            android:textSize="14dp"
                            android:visibility="gone" />

                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_order_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
