<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_order_ready_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c8c8c8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="17dp">

            <ImageView
                android:id="@+id/image_item_src_my_order"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                tools:src="@drawable/img_food_3" />

            <TextView
                android:id="@+id/text_status_my_order"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:background="@drawable/shape_my_order_menu"
                android:gravity="center"
                android:text="@string/ready_to_receipt"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:textStyle="normal|bold"
                tools:ignore="HardcodedText" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_name_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:textColor="#CC000000"
                android:textSize="16dp"
                android:textStyle="normal|bold"
                tools:text="놀부 왕족발 세트" />

            <TextView
                android:id="@+id/text_store_name_my_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#CC000000"
                android:textSize="13dp"
                android:textStyle="normal|bold"
                tools:text="놀부보쌈" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="23.8dp"
                    android:layout_marginTop="2.2dp"
                    android:text="@string/word_pickup_time"
                    android:textColor="@color/colorGrayMapStore"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_pickup_time_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginBottom="23.8dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2.2dp"
                    android:textColor="@color/colorGrayMapStore"
                    android:textSize="13dp"
                    tools:hint="저녁 8시 40분" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
