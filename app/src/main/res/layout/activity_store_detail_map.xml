<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_detail_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xeed.cheapnsale.activity.StoreDetailMapActivity">

    <com.nhn.android.maps.NMapView
    android:id="@+id/detail_map_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_store_detail"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        android:layout_marginStart="11dp"
        android:layout_height="47dp">

        <ImageView
            android:id="@+id/image_back_button_store_detail_map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#ccffffff"
            android:src="@drawable/ico_back" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#4d000000"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:paddingBottom="18dp"
            android:paddingEnd="17.5dp"
            android:paddingStart="21dp"
            android:paddingTop="13dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_store_name_detail_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    tools:text="놀부족발" />

                <TextView
                    android:id="@+id/text_store_address_detail_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#CC000000"
                    android:textSize="15dp"
                    tools:text="서울시 송파구 방이 2동 푸르지오 5층" />

                <TextView
                    android:id="@+id/text_store_business_time_detail_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#CC000000"
                    android:textSize="14dp"
                    tools:text="10:00 - 22:00 (주문 마감 21:00)" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image_store_call_detail_map"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ico_call_copy" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>