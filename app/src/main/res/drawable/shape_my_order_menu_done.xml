<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- inner circle -->
    <item
        android:width="70dp"
        android:height="70dp"
        android:gravity="center">
        <shape android:shape="oval">

            <solid android:color="#CC4952db" />

        </shape>
    </item>


    <!-- larger circle at the back -->
    <item
        android:width="81dp"
        android:height="81dp"
        android:gravity="center">
        <shape android:shape="oval">

            <stroke
                android:width="2dp"
                android:color="@color/colorFooter" />

        </shape>
    </item>
</layer-list>